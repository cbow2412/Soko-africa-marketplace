{
  "version": 2,
  "framework": "vite",
  "buildCommand": "pnpm build",
  "installCommand": "pnpm install",
  "devCommand": "npm run dev",
  "outputDirectory": "dist/public",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "VITE_API_URL": "https://soko-africa-marketplace.vercel.app"
  }
}
