# Soko-africa-marketplace Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Frontend Configuration
VITE_API_URL=https://soko-africa.com
VITE_ANALYTICS_ENDPOINT=https://analytics.soko-africa.com
VITE_ANALYTICS_WEBSITE_ID=soko-africa-prod

# Backend Configuration
PORT=3000
NODE_ENV=production

# TiDB Cloud Production Database
DATABASE_URL=mysql://[user]:[password]@[host]:[port]/[database]?sslMode=REQUIRED

# Milvus Vector Database
MILVUS_ADDRESS=https://[host]:19530
MILVUS_USERNAME=db_admin
MILVUS_PASSWORD=[password]

# AI/ML Services
HF_TOKEN=hf_xxxxxxxxxxxxxxxxxxxxx
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxx
REPLICATE_API_TOKEN=r8_xxxxxxxxxxxxxxxxxxxxx

# AWS S3 Configuration (for image storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=soko-africa-prod-images
AWS_REGION=eu-central-1

# OAuth Configuration
OAUTH_SERVER_URL=https://oauth.soko-africa.com

# WhatsApp Integration
WHATSAPP_BUSINESS_ACCOUNT_ID=your_account_id
WHATSAPP_API_TOKEN=your_api_token

# Feature Flags
ENABLE_HEARTBEAT_SYNC=true
ENABLE_COLLABORATIVE_FILTERING=true
ENABLE_GEMINI_QC=true
ENABLE_MILVUS=true

# Logging
LOG_LEVEL=info

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redis Configuration (for caching)
REDIS_HOST=redis-prod.soko-africa.com
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Monitoring & Observability
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEW_RELIC_LICENSE_KEY=your_new_relic_key
