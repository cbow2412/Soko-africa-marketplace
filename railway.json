{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "node dist/index.js",
    "restartPolicyMaxRetries": 5,
    "restartPolicyWindowMs": 60000,
    "healthcheckPath": "/health",
    "healthcheckInterval": 10,
    "healthcheckTimeout": 5
  }
}
